{
    "version": 2,
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/src/**",
                    "backend/package.json"
                ]
            }
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "*.js",
            "use": "@vercel/static"
        },
        {
            "src": "*.css",
            "use": "@vercel/static"
        },
        {
            "src": "images/**",
            "use": "@vercel/static"
        },
        {
            "src": "pdfs/**",
            "use": "@vercel/static"
        },
        {
            "src": "data/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/files/download/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/api/data/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "public, s-maxage=60, stale-while-revalidate=300"
            }
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}